        <TextBox x:Name="verhogingTextBox" HorizontalAlignment="Left" Margin="313,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="gewenstBedragTextBox" HorizontalAlignment="Left" Margin="313,229,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" Margin="146,271,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="494" Height="138"/>
        <Button x:Name="calculateButton" Content="Bereken" HorizontalAlignment="Left" Margin="600,101,0,0" VerticalAlignment="Top" Height="33" Width="80" Click="calculateButton_Click"/>
        <Button x:Name="deleteButton" Content="Wissen" HorizontalAlignment="Left" Margin="600,165,0,0" VerticalAlignment="Top" Height="21" Width="80" Click="deleteButton_Click"/>
