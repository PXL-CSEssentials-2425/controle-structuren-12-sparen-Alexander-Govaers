        <Grid.Background>
            <ImageBrush ImageSource="/Spaarvarken.jpg"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Left" Margin="211,110,0,0" TextWrapping="Wrap" Text="Weekgeld" VerticalAlignment="Top" Height="40" Width="102"/>
